<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondodetails">

    <TextView
        android:id="@+id/tvName"
        style="@style/Base.TextAppearance.AppCompat.Display2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textStyle="normal|bold|italic"
        android:textColor="#FFEB3B"
        android:gravity="center_horizontal" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/imageView2"
        android:layout_below="@+id/tvName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:src="@drawable/images" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="New Text"
        android:id="@+id/tvHeight"
        android:textColor="@color/material_grey_300"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@+id/imageView2"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="New Text"
        android:id="@+id/tvHair"
        android:layout_below="@+id/tvHeight"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView2"
        android:textColor="@color/material_grey_300"
        style="Base.TextAppearance.AppCompat.Body2"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="New Text"
        android:id="@+id/tvEye"
        android:layout_below="@+id/tvHair"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView2"
        android:textColor="@color/material_grey_300"
        style="Base.TextAppearance.AppCompat.Body2"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="New Text"
        android:id="@+id/tvSkin"
        android:layout_below="@+id/tvEye"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView2"
        android:textColor="@color/material_grey_300"
        style="Base.TextAppearance.AppCompat.Body2"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="New Text"
        android:id="@+id/tvMass"
        android:layout_below="@+id/tvSkin"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView2"
        android:textColor="@color/material_grey_300"
        style="Base.TextAppearance.AppCompat.Body2"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="New Text"
        android:id="@+id/tvGender"
        android:layout_below="@+id/tvMass"
        android:layout_alignEnd="@+id/tvMass"
        android:layout_toEndOf="@+id/imageView2"
        android:textColor="@color/material_grey_300"
        style="Base.TextAppearance.AppCompat.Body2"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="New Text"
        android:id="@+id/tvBirth"
        android:layout_below="@+id/tvGender"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView2"
        android:textColor="@color/material_grey_300"
        style="Base.TextAppearance.AppCompat.Body2"
        android:textStyle="normal|bold|italic" />

</RelativeLayout>