

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            tools:showIn="@layout/activity_coming_soon"
            tools:context="com.example.manuel.starwars.ComingSoonActivityFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estrenos"
        android:id="@+id/textView"
        android:layout_alignEnd="@+id/videoView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        style="@style/Base.TextAppearance.AppCompat.Display2"
        android:textColor="@color/colorAccent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Force Awakens"
        android:id="@+id/textView3"
        style="@style/Base.TextAppearance.AppCompat.Headline" />

    <TextView
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:text="Después de 10 años llega la séptima entrega de la Saga Star Wars"
        android:id="@+id/textView2"
        android:layout_above="@+id/videoView"
        android:layout_alignParentStart="true"
        android:singleLine="false"
        style="@style/Base.TextAppearance.AppCompat.Body2" />

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/videoView"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

        </LinearLayout>
    </ScrollView>


